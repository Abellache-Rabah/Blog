<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action='/compose' method="POST">
	<div class="form-group">
		<label>Title</label>
		<input class="form-control" type="text" placeholder="Title" name="postTitle">
	</div>
	<div class="form-group">
	<label>Post</label>
	<textarea class="form-control" name="postBody" rows="5" cols="30">
	</textarea>
	</div>
	<button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include('partials/footer'); -%>